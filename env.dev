# Variables de entorno para DESARROLLO/PRUEBAS
# Copia este archivo como .env.dev y ajusta los valores según tu configuración

# Base de datos (usa la misma que producción o una separada)
MONGODB_URI=mongodb://localhost:27018/taller_dev
MONGODB_DB=taller_dev

# JWT Secret (usa uno diferente para desarrollo)
JWT_SECRET=XfOvU9NYHxoNgKAl

# CORS (más permisivo para desarrollo)
ALLOWED_ORIGINS=*

# Cloudinary (usa la misma cuenta o una separada para pruebas)
UPLOAD_DRIVER=cloudinary
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret
CLD_FOLDER=taller-dev

# Configuración de desarrollo
LOG_LEVEL=debug
NODE_ENV=development

# Rate limits más permisivos para desarrollo
PUBLIC_RATE_MAX=1000
CHECKOUT_RATE_MAX=1000
AUTH_RATE_MAX=1000

# Cache version para desarrollo
CACHE_VERSION=dev-v1

# SMTP para desarrollo (opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
MAIL_FROM="Taller Dev <dev@taller.com>"
FRONTEND_BASE_URL=http://localhost:8080
